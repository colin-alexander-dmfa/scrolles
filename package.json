{
	"name": "scrolles",
	"description": "A deadly simple scroll progress indicator based on css and a bunch of js.",
	"version": "3.0.0",
	"license": "Unlicense",
	"author": "Mattia Astorino [@equinusocio]",
	"main": "dist/index.js",
	"files": [
		"dist/index.js"
	],
	"homepage": "https://github.com/equinusocio/scrolles",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/equinusocio/scrolles.git"
	},
	"bugs": {
		"url": "https://github.com/equinusocio/scrolles/issues"
	},
	"scripts": {
		"clean": "yarn rimraf dist/**",
		"size": "size-limit",
		"build:js": "make-dir dist && uglifyjs src/index.js --compress --mangle --warn --output dist/index.js",
		"build": "run-s clean build:js size",
		"dev": "run-s clean build:js && parcel test/index.html",
		"prepublishOnly": "run-s build"
	},
	"engines": {
		"node": ">=11"
	},
	"size-limit": [
		{
			"limit": "1 kB",
			"path": "dist/index.js"
		}
	],
	"browserslist": [
		"last 1 Chrome versions",
		"last 1 Firefox versions",
		"last 1 Safari versions",
		"last 1 Edge versions"
	],
	"keywords": [
		"progress",
		"scroll",
		"vanilla",
		"simple",
		"equinusocio"
	],
	"devDependencies": {
		"@babel/core": "7.14.3",
		"@babel/preset-env": "7.14.4",
		"@juggle/resize-observer": "3.3.1",
		"@size-limit/preset-small-lib": "4.11.0",
		"@types/node": "^15.6.1",
		"babel-plugin-root-import": "6.6.0",
		"eslint": "7.27.0",
		"make-dir-cli": "3.0.0",
		"npm-run-all": "4.1.5",
		"parcel": "2.0.0-beta.2",
		"rimraf": "3.0.2",
		"size-limit": "4.11.0",
		"uglify-js": "3.13.8"
	},
	"dependencies": {}
}
